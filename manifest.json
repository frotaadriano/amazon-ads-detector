{
  "manifest_version": 3,
  "name": "Customizable Amazon Sponsored Highlighter",
  "version": "1.72",
  "description": "Destaca itens patrocinados na Amazon com configurações customizáveis.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
